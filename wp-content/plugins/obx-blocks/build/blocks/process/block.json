{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "obx-blocks/process",
  "version": "1.0.0",
  "title": "Process",
  "category": "obx-blocks",
  "icon": "chart-line",
  "description": "Display a process or steps with images",
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    },
    "anchor": true
  },
  "attributes": {
    "anchor": {
      "type": "string",
      "default": ""
    },
    "contentWidth": {
      "type": "number",
      "default": 80
    },
    "heading": {
      "type": "string",
      "default": ""
    },
    "introText": {
      "type": "string",
      "default": ""
    },
    "steps": {
      "type": "array",
      "default": []
    },
    "ctaText": {
      "type": "string",
      "default": ""
    },
    "ctaUrl": {
      "type": "string",
      "default": ""
    },
    "align": {
      "type": "string",
      "default": "full"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "textColor": {
      "type": "string",
      "default": ""
    },
    "accentColor": {
      "type": "string",
      "default": "#a7d1fb"
    },
    "textAlign": {
      "type": "string",
      "default": "center"
    }
  },
  "textdomain": "obx-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}