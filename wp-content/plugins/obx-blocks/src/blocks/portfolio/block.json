{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "obx-blocks/portfolio",
  "version": "1.0.0",
  "title": "Portfolio",
  "category": "obx-blocks",
  "icon": "portfolio",
  "description": "Display your portfolio items with images, names, and descriptions.",
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "anchor": true
  },
  "attributes": {
    "anchor": {
      "type": "string",
      "default": ""
    },
    "tagline": {
      "type": "string",
      "default": ""
    },
    "heading": {
      "type": "string",
      "default": ""
    },
    "portfolioItems": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "imageId": {
            "type": "number"
          },
          "imageAlt": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "align": {
      "type": "string",
      "default": "full"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "textColor": {
      "type": "string",
      "default": ""
    },
    "accentColor": {
      "type": "string",
      "default": "#a7d1fb"
    },
    "textAlign": {
      "type": "string",
      "default": "center"
    },
    "contentWidth": {
      "type": "number",
      "default": 80
    }
  },
  "textdomain": "obx-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
} 